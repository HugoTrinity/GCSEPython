direction = input("Which direction do you want to count? (u/d)")
if direction == "u":
    num = int(input("What should I count up to?"))
    for i in range(1, num):
        print(i)
elif direction == "d":
    num = int(input("What number below 20 should I count down from"))
    for i in range(20, num, -1):
        print(i)
else:
    print("I don't understand")
